doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0")
    title Neolo
    //- Favicons and Android NavBar Color
    link(rel='icon', href='img/favicon.ico')
    link(rel='icon', type='image/png', href='img/favicon.png')
    meta(name='theme-color', content='#9DBC19')
    meta(name='robotos', content='noindex, nofollow')  
    //- CSS Files
    link(rel='stylesheet', href='css/styles.css')
    block head
      //- If extra head content is necessary per page, it can be added in index.jade

  body
    div.is-hidden
      include ./includes/svg.svg

    block content
      //- This gets replaced by content in index.jade


    block footer
      //- If extra footer content is necessary per page, it can be added in index.jade

    script(src="js/vendor.js")
    script(src='js/app.js')

    block scripts
