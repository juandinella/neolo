mixin dropdown(id,title,description)
  .dropdown(id=`dropdown-${id}`)
    .container
      .row
        .col-xs-12
          h4=title
      .row
        .col-xs-5.dropdown-description
          p=description
        block

mixin flags(options)
  li: a(href="", title=`${options.title}`)
    i(class=`sprite sprite-${options.id}`) 
    p=options.title
